<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <% if task.status == 1 %>
    <tr>
        <td><%= task.title %></td>
        <td><%= task.status = '未着手' %></td>
        <td><%= link_to 'Show', task_path(task) %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
      </tr>
      <% else task.status == 2 %>
      <tr>
          <td><%= task.title %></td>
          <td><%= task.status = '対応中' %></td>
          <td><%= link_to 'Show', task_path(task) %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
